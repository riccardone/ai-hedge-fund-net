	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.21.0" />
	</ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ai-hedge-fund-net.Agents\ai-hedge-fund-net.Agents.csproj" />
